{
	"name": "@glowsrc/screenshot",
	"version": "0.1.2",
	"description": "An library to screenshot a page easily using puppeteer",
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.cjs",
		"node": "./dist/index.mjs",
		"default": "./dist/index.cjs"
	},
	"type": "commonjs",
	"repository": "https://github.com/Glow-OpenSource/screenshot",
	"author": "Googlefan256 (https://opensource.glow-bot.com/)",
	"license": "MIT",
	"private": false,
	"scripts": {
		"lint": "prettier --write \"**/**.(js|ts|mjs|tsx|jsx|cjs)\"",
		"build": "tsc\ngoss import\nnpm run lint\ncp ./src/index.mjs ./dist/index.mjs",
		"prepare": "npm run build\nnpm run lint"
	},
	"devDependencies": {
		"goss": "^0.1.3",
		"prettier": "^2.6.2",
		"typescript": "^4.6.3"
	},
	"dependencies": {
		"chalk": "^4.1.2",
		"puppeteer": "^13.6.0"
	},
	"files": [
		"dist/"
	],
	"bin": {
		"ss": "dist/cli.js"
	}
}
